{
  "name": "conversa-clone",
  "version": "1.0.0",
  "description": "AI-Powered Marketing Automation Platform - WhatsApp Business Solution",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "migrate": "cd backend && npm run migrate",
    "pm2:start": "cd backend && npm run pm2:start",
    "pm2:stop": "cd backend && npm run pm2:stop",
    "pm2:restart": "cd backend && npm run pm2:restart",
    "pm2:logs": "cd backend && npm run pm2:logs",
    "setup": "chmod +x setup.sh && ./setup.sh",
    "deploy": "chmod +x deploy-to-github.sh && ./deploy-to-github.sh",
    "health-check": "chmod +x test-system.sh && ./test-system.sh"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "marketing",
    "ai",
    "chatbot",
    "conversa",
    "whatsapp-business",
    "nodejs",
    "react",
    "express",
    "postgresql",
    "redis"
  ],
  "author": "BaiseBaise886",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BaiseBaise886/conversa-clone.git"
  },
  "bugs": {
    "url": "https://github.com/BaiseBaise886/conversa-clone/issues"
  },
  "homepage": "https://github.com/BaiseBaise886/conversa-clone#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}
