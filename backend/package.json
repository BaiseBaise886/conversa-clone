{
  "name": "conversa-clone-backend",
  "version": "1.0.0",
  "description": "AI-Powered Marketing Automation Platform - Backend API",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "node src/config/migrate.js",
    "migrate:fresh": "npm run migrate",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs conversa-clone",
    "pm2:monit": "pm2 monit"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "marketing",
    "ai",
    "chatbot",
    "conversa",
    "instagram",
    "nodejs",
    "express"
  ],
  "author": "BaiseBaise886",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BaiseBaise886/conversa-clone.git"
  },
  "bugs": {
    "url": "https://github.com/BaiseBaise886/conversa-clone/issues"
  },
  "homepage": "https://github.com/BaiseBaise886/conversa-clone#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.17.1",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.0",
    "mysql2": "^3.11.5",
    "openai": "^4.67.3",
    "qrcode": "^1.5.4",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "whatsapp-web.js": "^1.26.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "nodemon": "^3.1.7",
    "pm2": "^5.4.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "src/**/*.spec.js",
      "node_modules"
    ],
    "delay": "2000"
  }
}
