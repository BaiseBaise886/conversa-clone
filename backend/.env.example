# ============================================
# CONVERSA CLONE - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=conversa_clone
DB_USER=conversa_user
DB_PASSWORD=conversa_pass_2025

# Alternative: Use DATABASE_URL instead of individual DB settings
# DATABASE_URL=postgresql://conversa_user:conversa_pass_2025@localhost:5432/conversa_clone

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_URL=redis://localhost:6379

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate a secure secret: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRE=7d

# ============================================
# AI CONFIGURATION
# ============================================

# Google Gemini AI (Primary AI Provider)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# OpenAI (Optional - Alternative AI Provider)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ============================================
# ANTI-BAN PROTECTION SETTINGS
# ============================================
# Message sending delays (in milliseconds)
MESSAGE_DELAY_MIN=2000
MESSAGE_DELAY_MAX=5000

# Daily message limit per channel
DAILY_MESSAGE_LIMIT=1000

# Human typing speed simulation (characters per second)
HUMAN_TYPING_SPEED=30

# ============================================
# RATE LIMITING
# ============================================
# Time window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# WHATSAPP CONFIGURATION
# ============================================
# Path to store WhatsApp session data
WHATSAPP_SESSION_PATH=./whatsapp-sessions

# ============================================
# MEDIA UPLOAD SETTINGS
# ============================================
# Maximum file size in bytes (16MB = 16777216)
MAX_FILE_SIZE=16777216

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
# Options: error, warn, info, http, verbose, debug, silly

# ============================================
# EMAIL CONFIGURATION (Optional - Future Use)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@conversa-clone.com

# ============================================
# WEBHOOK CONFIGURATION (Optional)
# ============================================
# WEBHOOK_SECRET=your-webhook-secret-key

# ============================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ============================================
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# SENDGRID_API_KEY=SG....
# TWILIO_ACCOUNT_SID=AC....
# TWILIO_AUTH_TOKEN=....

# ============================================
# ANALYTICS & MONITORING (Optional)
# ============================================
# SENTRY_DSN=https://....@sentry.io/...
# GOOGLE_ANALYTICS_ID=UA-...

# ============================================
# PRODUCTION SETTINGS
# ============================================
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# DOMAIN=api.conversa-clone.com

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Enable detailed error messages in development
DEBUG=false

# ============================================
# BACKUP CONFIGURATION (Optional)
# ============================================
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_PATH=/backups

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AI_FEATURES=true
ENABLE_AB_TESTING=true
ENABLE_ANALYTICS=true
ENABLE_MULTIMEDIA=true

# ============================================
# NOTES
# ============================================
# 1. Never commit this file with real values to version control
# 2. Use strong, unique passwords for production
# 3. Rotate JWT_SECRET regularly in production
# 4. Keep API keys secure and never share them
# 5. Use environment-specific .env files (.env.development, .env.production)
# 6. For production, consider using a secrets management service
#    like AWS Secrets Manager, HashiCorp Vault, or Azure Key Vault